                        }

    </script>

    <script type="text/javascript">
 
        $(document).ready(function() {
            $("#Address").blur(function(evt) {
                $("#Latitude").val("");
                $("#Longitude").val("");
 
                var address = jQuery.trim($("#Address").val());
                if (address.length < 1)
                    return;
 
                FindAddressOnMap(address);
            });
        });
 
    </script>

    @Scripts.Render("~/bundles/jqueryval")

}